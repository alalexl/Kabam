<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/RedActionBar</item>
        <item name="colorControlNormal">#fff55454</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="RedActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#fff55454</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:titleTextStyle">@style/KabamTextStyle</item>
    </style>

    <style name="KabamTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
