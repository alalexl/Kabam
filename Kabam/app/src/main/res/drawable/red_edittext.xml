<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#fff55454"
                android:endColor="#fff55454"
                android:angle="270" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="0dp"
                android:right="20dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
